extends base.pug

block content
    #container.container
      .form-container.sign-up-container
        form(action='api/v1/users/signUp' method="post")
          h1 Create Account
          .social-container
            a.social(href='#')
              i.fab.fa-facebook-f
            a.social(href='#')
              i.fab.fa-google-plus-g
            a.social(href='#')
              i.fab.fa-linkedin-in
          span or use your email for registration
          input(name="username" type='username' placeholder='Username')
          input(name="name" type='text' placeholder='Name')
          input(name="email" type='email' placeholder='Email')
          input(name="password" type='password' placeholder='Password')
          button Sign Up
      .form-container.sign-in-container
        form(action='api/v1/users/login' method="post")
          h1 Sign in
          .social-container
            a.social(href='#')
              i.fab.fa-facebook-f
            a.social(href='#')
              i.fab.fa-google-plus-g
            a.social(href='#')
              i.fab.fa-linkedin-in
          span or use your account
          input(name="username" type='username' placeholder='Username')
          input(name="password" type='password' placeholder='Password')
          a(href='#') Forgot your password?
          button Sign In
      .overlay-container
        .overlay
          .overlay-panel.overlay-left
            h1 Welcome Back!
            p To keep connected with us please login with your personal info
            button#signIn.ghost Sign In
          .overlay-panel.overlay-right
            h1 Hello!
            p Enter your personal details and start journey with us
            button#signUp.ghost Sign Up